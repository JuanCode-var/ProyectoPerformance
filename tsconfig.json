{
  "compilerOptions": {
    "target": "ES2020",
    
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "@app/*": [
        "app/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@widgets/*": [
        "widgets/*"
      ],
      "@features/*": [
        "features/*"
      ],
      "@entities/*": [
        "entities/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@legacy/*": [
        "legacy/*"
      ]
    },
    "types": [
      "vite/client"
    ],
    "skipLibCheck": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "src",
    "vite.config.ts",
    "server/utils"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "server",
    "microPagespeed"
  ]
}