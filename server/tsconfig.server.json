{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",

    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "types": ["node", "express"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "strict": false
  },
  "include": ["**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
